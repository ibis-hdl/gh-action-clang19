{
    "version": 8,
    "include": [
        "cmake/presets/gnuc.json",
        "cmake/presets/clang.json",
        "cmake/presets/clang-libcpp.json",
        "cmake/presets/msvc.json",
        "cmake/presets/msvc-cl.json"
    ],
    "configurePresets": [
        {
            "name": "gcc",
            "displayName": "GnuC",
            "description": "GnuC compiler",
            "inherits": [
                "condition-linux",
                "ninja-multi-config",
                "cmake-default-configure-settings",
                "default-install-settings",
                "default-environment"
            ]
        },
        {
            "name": "clang",
            "displayName": "Clang",
            "description": "Clang compiler",
            "inherits": [
                "condition-linux-or-macos",
                "ninja-multi-config",
                "clang-release-build-type",
                "cmake-default-configure-settings",
                "default-install-settings",
                "default-environment"
            ]
        },
        {
            "name": "clang-libc++",
            "displayName": "Clang-libc++",
            "description": "Clang-libc++ compiler",
            "inherits": [
                "condition-linux",
                "ninja-multi-config",
                "clang-libc++-release-build-type",
                "cmake-default-configure-settings",
                "default-install-settings",
                "default-environment"
            ],
            "cacheVariables": {
                "CONAN_HOST_PROFILE": "clang-libc++",
                "CONAN_BUILD_PROFILE": "clang-libc++"
            }
        },
        {
            "name": "msvc",
            "displayName": "MSVC",
            "description": "Microsoft Visual Studio C++ compiler",
            "inherits": [
                "condition-windows",
                "windows-x64-arch",
                "ninja-multi-config",
                "msvc-release-build-type",
                "cmake-default-configure-settings",
                "default-install-settings",
                "default-environment"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "gcc-release",
            "displayName": "Release",
            "description": "Release build with GnuC",
            "configuration": "Release",
            "configurePreset": "gcc"
        },
        {
            "name": "gcc-debug",
            "displayName": "Debug",
            "description": "Debug build with GnuC",
            "configuration": "Debug",
            "configurePreset": "gcc"
        },
        {
            "name": "clang-release",
            "displayName": "Release",
            "description": "Release build with Clang",
            "configuration": "Release",
            "configurePreset": "clang"
        },
        {
            "name": "clang-debug",
            "displayName": "Debug",
            "description": "Debug build with Clang",
            "configuration": "Debug",
            "configurePreset": "clang"
        },
        {
            "name": "clang-libc++-release",
            "displayName": "Release",
            "description": "Release build with Clang libc++",
            "configuration": "Release",
            "configurePreset": "clang-libc++"
        },
        {
            "name": "clang-libc++-debug",
            "displayName": "Debug",
            "description": "Debug build with Clang libc++",
            "configuration": "Debug",
            "configurePreset": "clang-libc++"
        },
        {
            "name": "msvc-release",
            "displayName": "Release",
            "description": "Release build with Microsoft Visual Studio",
            "configuration": "Release",
            "configurePreset": "msvc"
        },
        {
            "name": "msvc-debug",
            "displayName": "Debug",
            "description": "Debug build with Microsoft Visual Studio",
            "configuration": "Debug",
            "configurePreset": "msvc"
        }
    ],
    "testPresets": [
        {
            "name": "gcc-release-test",
            "displayName": "Release Test",
            "description": "Test GnuC build",
            "configuration": "Release",
            "configurePreset": "gcc",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "gcc-debug-test",
            "displayName": "Debug Test",
            "description": "Test GnuC build",
            "configuration": "Debug",
            "configurePreset": "gcc",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "clang-release-test",
            "displayName": "Release Test",
            "description": "Test Clang build",
            "configuration": "Release",
            "configurePreset": "clang",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "clang-debug-test",
            "displayName": "Debug Test",
            "description": "Test Clang build",
            "configuration": "Release",
            "configurePreset": "clang",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "clang-libc++-release-test",
            "displayName": "Release Test",
            "description": "Test Clang libc++ build",
            "configuration": "Release",
            "configurePreset": "clang-libc++",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "clang-libc++-debug-test",
            "displayName": "Debug Test",
            "description": "Test Clang libc++ build",
            "configuration": "Release",
            "configurePreset": "clang-libc++",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "msvc-release-test",
            "displayName": "Release Test",
            "description": "Test Microsoft Visual Studio build",
            "configuration": "Release",
            "configurePreset": "msvc",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "msvc-debug-test",
            "displayName": "Debug Test",
            "description": "Test Microsoft Visual Studio build",
            "configuration": "Release",
            "configurePreset": "msvc",
            "inherits": [
                "default-testPreset"
            ]
        }
    ]
}